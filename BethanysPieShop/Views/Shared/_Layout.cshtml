<!DOCTYPE html>

<html>

    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Bethany's Pie</title>
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <link href="~/Content/site.css" rel="stylesheet" />
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script asp-src-include="lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

        <title>Bethany's Pie Shop</title>
    </head>
<body>
    <div>
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark custom-bg-color">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/images/bethanylogo.png" alt="logo" width="80" max-height="auto"/>
                </a>
                @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>*@
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @*<vc:category-menu></vc:category-menu> *@
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pie" asp-action="List">PIES</a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Contact" asp-action="Index" class="nav-link">CONTACT</a>
                        </li>
                    </ul>

                    <ul class="navbar nav mb-6 mb-lg-0" style="margin-top:8px; margin-right: 30px;">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pie" asp-action="Search" style="color:white">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                </svg>
                            </a>
                        </li>
                    </ul>
                    <div style="margin-right:150px;">
                        <vc:shopping-cart-summary></vc:shopping-cart-summary>
                    </div>
                </div>
            </nav>

        </header>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>

<style>
    .custom-bg-color{
        background-color: #CD9468;
    }

    .navbar-nav a {
        color:#fff !important;
    }

    .navbar {
        padding-left: 40px;
    }

    #navbarCollapse {
        display: flex;
        justify-content: space-between;
        margin-right: 40px;
    }

    #navbarCollapse a {
        letter-spacing:0.1rem;
    }

    body{
        background: #F7F4F2;
    }
</style>